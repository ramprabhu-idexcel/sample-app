<%= grid_widget(
          product_columns, @products, {:searchable => ['name','description','country','price']}, {:paginate => true}) %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            "#",
            :class => 'btn btn-primary',:id=>"new_product" %>

<%= link_to t('.Save', :default => t("helpers.links.save")),
            "#",:id=>"prod_save",:class => 'btn btn-primary' %>

<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      destroy_all_prod_products_path(:page=>(params[:page] ? params[:page] : 1) ),:value =>"",:id=>"delete_selected_items",
                      :remote => true,
                      :data => { :value => "",:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger' %>


