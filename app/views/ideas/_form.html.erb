<%= form_for @idea, :html => { :class => 'form-horizontal' } do |f| %>

  <% if @idea.errors.any? %>
  <div id="error_explanation">   
        <h2><%= pluralize(@idea.errors.count, "error") %> prohibited this idea from being saved:</h2>
        <ul>
          <% @idea.errors.full_messages.each do |msg| %>
            <li> <%= msg %></li>
          <% end %>
        </ul>    
  </div>
  <% end %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :picture, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :picture, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :user_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                ideas_path, :class => 'btn' %>
  </div>
<% end %>
